{
  "version": "2.0.0",
  "type": "shell",
  "presentation": {
    "close": true
  },
  "tasks": [
    {
      "label": "CopyEnvs",
      "command": "cp ./backend/.env.example ./backend/.env && cp ./web/.env.example ./web/.env "
    },
    {
      "label": "SetupFrontend",
      "command": "cd web && npm install"
    },
    {
      "label": "SetupBackend",
      "command": "cd backend && composer install && php artisan migrate --no-interaction"
    },
    {
      "label": "StartAll",
      "dependsOn": ["BackendServer", "WebFrontendServer"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "BackendServer",
      "command": "cd backend && php artisan serve --no-reload"
    },
    {
      "label": "WebFrontendServer",
      "command": "cd web && npm run dev"
    }
    // {
    //   "label": "Reseed Backend (TEMP ONLY WHILE DEV)",
    //   "command": "cd backend && php artisan migrate:refresh --seed",
    //   "problemMatcher": []
    // },
  ]
}
