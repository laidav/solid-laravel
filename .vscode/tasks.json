{
  "version": "2.0.0",
  "type": "shell",
  "presentation": {
    "close": true
  },
  "tasks": [
    {
      "label": "SetupAll",
      "dependsOn": [
        "CopyEnvsAndGenerateAppKey",
        "CreateDatabase",
        "SetupBackendAndWeb",
        "StartAll"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "SetupBackendAndWeb",
      "dependsOn": ["SetupBackend", "SetupWeb"],
      "dependsOrder": "parallel"
    },
    {
      "label": "CopyEnvsAndGenerateAppKey",
      "dependsOn": ["CopyEnvs", "GenerateAppKey"],
      "dependsOrder": "sequence"
    },
    {
      "label": "CopyEnvs",
      "command": "cp ./backend/.env.example ./backend/.env && cp ./web/.env.example ./web/.env"
    },
    {
      "label": "GenerateAppKey",
      "command": "cd backend && php artisan key:generate"
    },
    {
      "label": "Create Database",
      "command": "mysql -h db -u root --skip-ssl -e \"CREATE DATABASE IF NOT EXISTS my_app;\""
    },
    {
      "label": "SetupBackend",
      "command": "cd backend && composer install && php artisan migrate:refresh --seed --no-interaction"
    },
    {
      "label": "SetupWeb",
      "command": "cd web && npm install"
    },
    {
      "label": "StartAll",
      "dependsOn": ["BackendServer", "WebServer"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "BackendServer",
      "command": "cd backend && php artisan serve --host=0.0.0.0 --port=8000 --no-reload"
    },
    {
      "label": "WebServer",
      "command": "cd web && npm run dev -- --host 0.0.0.0"
    }
  ]
}
